<Page x:Class="SolitarioTiramisu.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:SolitarioTiramisu"
      mc:Ignorable="d"
      Title="Solitario Tiramisu">
    <Page.Resources>
        <Style x:Key="ColoredButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#FFF1E8DC"/>
            <Setter Property="BorderBrush" Value="#FFF1E8DC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#CEFCFF"/>
                    <Setter Property="BorderBrush" Value="#FF4682B4"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    <Grid Background="#FF226F54" AllowDrop="True">
        <Border BorderBrush="Black" BorderThickness="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Canvas x:Name="canvas" AllowDrop="True" Drop="Canvas_Drop" DragOver="Canvas_DragOver" Margin="0">
                <Rectangle HorizontalAlignment="Left" Height="235" Width="176" Canvas.Left="198" Canvas.Top="560" Stroke="White" VerticalAlignment="Top" />
                <Button x:Name="deck" Canvas.Left="198" Canvas.Top="559" Height="236" Width="176" Click="deck_Click" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Background>
                        <ImageBrush ImageSource="/Retro.jpg"/>
                    </Button.Background>
                </Button>
                <Button x:Name="btnRestart" Content="RESTART" Style="{StaticResource ColoredButtonStyle}" HorizontalAlignment="Left" Height="73" VerticalAlignment="Center" Width="176" Canvas.Left="198" Canvas.Top="168" FontFamily="Cascadia Mono SemiLight" FontSize="16"/>
                <Button Name="CloseButton" Content="ESCI" Style="{StaticResource ColoredButtonStyle}" HorizontalAlignment="Left" Click="CloseButton_Click" Width="176" Height="74" Canvas.Left="198" Canvas.Top="312" VerticalAlignment="Center" FontFamily="Cascadia Mono SemiLight" FontSize="16"/>

                <Rectangle Name="targetPanel1" AllowDrop="True" Width="175" Height="235" Stroke="White" Canvas.Left="549" Canvas.Top="168" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Rectangle Name="targetPanel2" AllowDrop="True" Width="175" Height="235" Stroke="White" Canvas.Left="851" Canvas.Top="168" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Rectangle Name="targetPanel3" AllowDrop="True" Width="175" Height="235" Stroke="White" Canvas.Left="1150" Canvas.Top="168" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Rectangle Name="targetPanel4" AllowDrop="True" Width="175" Height="235" Stroke="White" Canvas.Left="1450" Canvas.Top="168" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <Rectangle Name="targetPanel5" AllowDrop="True" Width="175" Height="235" Stroke="White" Canvas.Left="550" Canvas.Top="560" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <Rectangle Name="targetPanel6" AllowDrop="True" Width="175" Height="235" Stroke="White" Canvas.Left="850" Canvas.Top="560" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <Rectangle Name="targetPanel7" AllowDrop="True" Width="175" Height="235" Stroke="White" Canvas.Left="1150" Canvas.Top="560" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Rectangle Name="targetPanel8" AllowDrop="True" Width="175" Height="235" Stroke="White" Canvas.Left="1450" Canvas.Top="560" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </Canvas>
        </Border>
    </Grid>
</Page>
