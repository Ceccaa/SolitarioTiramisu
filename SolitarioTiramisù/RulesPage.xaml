<Page x:Class="SolitarioTiramisu.RulesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="RulesPage">
    <Grid Background="#FF226F54">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
            <TextBlock Text="Regole del Solitario:" FontSize="24" FontWeight="Bold" TextAlignment="Center" Margin="20"/>
            <TextBlock Text="1. Regola 1..." FontSize="16" TextAlignment="Center" Margin="10"/>
            <TextBlock Text="2. Regola 2..." FontSize="16" TextAlignment="Center" Margin="10"/>
            <TextBlock Text="3. Regola 3..." FontSize="16" TextAlignment="Center" Margin="10"/>
            <Button Content="Vai al Gioco" Click="GoToGameButton_Click" Width="200" Height="50" Margin="20"/>
        </StackPanel>
    </Grid>
</Page>
