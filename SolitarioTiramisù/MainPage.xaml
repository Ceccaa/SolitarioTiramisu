<Page x:Class="SolitarioTiramisu.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ii">
    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="15" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" 
                                              Content="{TemplateBinding Content}" 
                                              ContentTemplate="{TemplateBinding ContentTemplate}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#FFDDDDDD"/>
            <Setter Property="BorderBrush" Value="#FF707070"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#CEFCFF"/>
                    <Setter Property="BorderBrush" Value="#FF4682B4"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    <Grid Name="Sfondo" Background="#FF226F54">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,40">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Content="AVVIA GIOCO" Click="StartGameButton_Click" Width="300" Height="80" Margin="10" VerticalAlignment="Top" FontFamily="Cascadia Mono SemiLight" FontSize="20"/>
            <Button Content="REGOLE" Click="RulesButton_Click" Width="300" Height="80" Margin="10" Grid.Row="1" VerticalAlignment="Top" FontFamily="Cascadia Mono SemiLight" FontSize="20"/>
            <Button Name="CloseButton" Content="ESCI" Click="CloseButton_Click" Width="300" Height="80" Margin="0,10,0,100" Grid.Row="2" VerticalAlignment="Top" FontFamily="Cascadia Mono SemiLight" FontSize="20"/>
        </Grid>
    </Grid>
</Page>
